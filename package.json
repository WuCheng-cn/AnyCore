{
  "name": "@arayui/core",
  "type": "module",
  "version": "1.0.0",
  "description": "基于装饰器语法的快速开发框架核心包",
  "author": "WuCheng-cn",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://gitee.com/aragakki_yui/any-core.git"
  },
  "keywords": [
    "decorator"
  ],
  "module": "./dist/index.es.js",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "vite build",
    "test": "vitest",
    "lint:fix": "eslint . --fix",
    "prepare": "husky",
    "cz": "cz",
    "release": "release-it"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.2.1",
    "@types/node": "^24.3.0",
    "commitizen": "^4.3.1",
    "commitlint": "^19.8.1",
    "commitlint-config-cz": "^0.13.3",
    "commitlint-config-gitmoji": "^2.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^7.5.0",
    "eslint": "^9.33.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "release-it": "^19.0.4",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "config": {
    "commitizen": {
      "path": "cz-customizable"
    },
    "cz-customizable": {
      "config": "./.cz-config.cjs"
    }
  },
  "lint-staged": {
    "src/**/*.{?([cm])[jt]s?(x),vue,md,json}": [
      "eslint --cache --fix"
    ]
  }
}
